@page
@model Web.Pages.ChartOfAccounts.IndexModel
@{
    ViewData["Title"] = "Chart of Accounts";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Chart of Accounts</h1>
    <div>
        @if (User.IsInRole("Admin") || User.IsInRole("Accountant"))
        {
            <a asp-page="Create" class="btn btn-primary">Create New Account</a>
        }
    </div>
</div>

<ul class="list-group">
    @foreach (var account in Model.AccountTree)
    {
        <partial name="_AccountTreePartial" model="account" />
    }
</ul>