@page "{id:int}"
@model Web.Pages.ChartOfAccounts.EditModel

@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit Account</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <input type="hidden" asp-for="Account.AccountId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Account.AccountCode" class="form-label"></label>
                <input asp-for="Account.AccountCode" class="form-control" />
                <span asp-validation-for="Account.AccountCode" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Account.AccountName" class="form-label"></label>
                <input asp-for="Account.AccountName" class="form-control" />
                <span asp-validation-for="Account.AccountName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Account.ParentAccountId" class="form-label">Parent Account</label>
                <select asp-for="Account.ParentAccountId" class="form-select" asp-items="Model.ParentAccountSL">
                    <option value="">-- No Parent (Root Account) --</option>
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-page="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 