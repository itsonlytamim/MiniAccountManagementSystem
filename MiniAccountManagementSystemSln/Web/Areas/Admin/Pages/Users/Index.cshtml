@page
@model MiniAccountManagementSystemSln.Web.Areas.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users Management";
}

<h2>Users Management</h2>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-primary">Create New User</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@user.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
