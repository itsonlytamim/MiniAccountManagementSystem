@model Core.Entities.Account
<li class="list-group-item">
    <div class="d-flex justify-content-between align-items-center">
        <span>@Model.AccountCode - @Model.AccountName</span>
        <span>
            <a asp-page="Edit" asp-route-id="@Model.AccountId" class="btn btn-sm btn-primary">Edit</a>
            <a asp-page="Create" asp-route-parentId="@Model.AccountId" class="btn btn-sm btn-success">Add Child</a>
            <a asp-page="Delete" asp-route-id="@Model.AccountId" class="btn btn-sm btn-danger">Delete</a>
        </span>
    </div>
    @if (Model.Children.Any())
    {
        <ul class="list-group ms-4 mt-2">
            @foreach (var child in Model.Children)
            {
                @Html.Partial("_AccountNode", child)
            }
        </ul>
    }
</li>
